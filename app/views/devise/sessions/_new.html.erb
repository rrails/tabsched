<h2>Sign inpartial</h2>
<%= simple_form_for(resource, :as => resource_name, :defaults => {:required => false}, :url => session_path(resource_name)) do |f| %>

  <div class="form-inputs">
    <%= f.input :first_name,  :placeholder => 'Email', :required => true, :autofocus => true, :label => false, :type => "text" %>
    <%= f.input :password, :placeholder => 'Password', :required => true, :label => false %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>