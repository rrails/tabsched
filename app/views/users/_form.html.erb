<div class="row top_row_padding">
  <div class="large-12 small-12 columns">
    <%= form_for @user do |f| %>
      <fieldset>
        <legend>Your Profile</legend>
        <%= render 'shared/error_messages', object: f.object %>
          <div class="row">
            <div class="large-12 small-12 columns">
              <%= f.text_field :first_name, :label => false, :placeholder => "First Name: " %>
            </div>
            <br>
            <div class="large-12 small-12 columns">
              <%= f.text_field :email, :class => 'email', :label => false, :placeholder => "Email: " %>
            </div>
            <br>
            <div class="large-12 small-12 columns">
              <%= f.text_field :mobile_phone, :class => 'mobile_phone', :label => false, :placeholder => "Mobile Phone Number: " %>
            </div>
            <br>
            <div class="large-6 small-6 columns">
              <%= f.label :email_notification%>
              <%= f.check_box :email_notification %>
            </div>
            <div class="large-6 small-6 columns">
              <%= f.label :mobile_phone_notification %>
              <%= f.check_box :mobile_phone_notification, :id => 'mobile_notify'%>
            </div>
          </div>
        <%= f.fields_for :timeperiods do |builder| %>
          <%= render 'timeperiods', :f => builder %>
        <% end %>
        <div id="addtimeperiodlink">
          <%=  link_to_add_fields image_tag("plus.png"),f, :timeperiods,:class => 'button small round' %>
        </div>
        <p><%= f.submit %></p>
      </fieldset>
    <% end %>
  </div >
</div>