<div class='roster row'>
  <div class='rosterperiod'>
    <div class="large-12 small-12 columns">
      <p><%= f.label :recurring_rules, "Frequency" %><br/>
        <%= f.select_recurring :frequency %>
      </p>
      <%= f.label :starting_date %>
      <% if f.object.ending_date %>
        <%= f.datepicker :starting_date, :class => "datepicker starting_date" ,:required => true,:value => f.object.starting_date.strftime('%d-%b-%y')%>
      <% else %>
        <%= f.datepicker :starting_date, :class => "datepicker end_date" %>
      <% end %>

      <%= f.label :ending_date %>
      <% if f.object.ending_date %>
        <%= f.datepicker :ending_date, :class => "datepicker end_date", :value => f.object.ending_date.strftime('%d-%b-%y') %>
      <% else %>
        <%= f.datepicker :ending_date, :class => "datepicker end_date" %>
      <% end %>
      <%= f.label :dosage %>
      <%= f.text_field :dosage, :required => true  %>
      <%= f.label :group_id %>
      <%= f.select :group_id, current_user.timeperiods.collect{|e| [e.timeperiodname.time_period_name + e.time_of_day.to_s,e.id]}%>
      <!-- <%#= f.select :group_id, Timeperiod.all.collect{|e| [e.timeperiodname.time_period_name,e.id]}%> -->
      <!-- Need to do an ajax request to show the time. -->
      <%= f.hidden_field :_destroy %>
      <%= f.button 'Delete Frequency', :id => 'del_roster', :class => 'button radius  tiny alert' %>
    </div>
  </div>
</div>
