<div class="row top_row_padding">
  <div class="large-12 small-12 columns">
    <%= form_for @medication do |f| %>
      <fieldset>
        <legend>Your Medications</legend>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :medication_name , :required => true%>
        <%= f.text_field :medication_name %>
        <%= f.label :expiry_date %>
        <% if f.object.expiry_date %>
        <%= f.text_field :expiry_date, :class => "datepicker", :value => f.object.expiry_date.strftime('%d-%b-%y')%>
        <% else %>
          <%= f.text_field :expiry_date, :class => 'datepicker' %>
        <% end %>
        <%= f.label :stock_quantity %>
        <%= f.text_field :stock_quantity,:required => true%>
        <%= f.label 'Medication Type' %>
        <%= f.select :medication_type_id, Medicationtype.all.collect{|e| [e.medication_type,e.id]}%>
      <%= f.fields_for :rosters do |builder| %>
        <%= render 'rosters', :f => builder %>
      <% end %>
      <div id="addrosterlink">
        <%=  link_to_add_fields image_tag("plus.png"),f, :rosters, :class => 'button small round' %>
      </div>
      <p><%= f.submit :id => 'medication_form' %></p>
      </fieldset>
    <% end %>
  </div >
</div>

