<div class="row">
  <div class="large-6 columns">
    <% if not @journals.empty? %>
      <% @journals.each do |journal| %>
        <div class='eachmed'>
          <%= journal.medication.medication_name %>
          <%= journal.user.first_name %>
          <%= journal.status %>
          <%= journal.date_taken.strftime('%d-%m-%y %H:%M') if journal.date_taken %>
          <%= journal.date_due.strftime('%d-%m-%y %H:%M') if journal.date_due %>
          <%= journal.next_due.strftime('%d-%m-%y %H:%M') if journal.next_due %>
          <%= link_to('Taken',taken_journal_path(journal), :id => 'taken', :class => 'button radius tiny') %>
          <%= link_to('Skipped',skip_journal_path(journal), :id => 'skipped', :class => 'button radius tiny') %>
        </div>
      <% end %>
    <% else %>
      <p> No journals entries yet</p>
    <% end %>
  </div >
</div>